<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mean_v1"
        tools:targetApi="31">

        <!-- Declaration of MainActivity -->
        <activity android:name="com.example.mean_v1.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaration of ScoresActivity -->
        <activity android:name="com.example.mean_v1.ScoresActivity"
            android:exported="false"> <!-- Set exported to true if this activity is started from outside the app -->
        </activity>

        <!-- Any other activities you have -->

    </application>
</manifest>
